<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_titulo_proyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título del proyecto"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_descripcion_proyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción del proyecto"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tv_calificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u2605 0.0"
            android:textSize="14sp"
            android:textColor="@android:color/holo_orange_dark"/> <TextView
        android:id="@+id/tv_fecha_proyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/12/2025"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comentariosLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_comment"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"
            app:tint="@android:color/darker_gray"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>

        <TextView
            android:id="@+id/contadorComentarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" comentarios"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/bg_archivo"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/icono_archivo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="icono archivo"
        />

    <TextView
        android:id="@+id/txt_nombre_archivo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="nombre.pdf"
        android:textSize="16sp"
        android:textColor="#222"
        android:maxLines="1"
        android:ellipsize="end" />

    <ImageView
        android:id="@+id/btn_eliminar_archivo"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:padding="4dp"
        android:src="@drawable/ic_close"
        app:tint="#B71C1C"
        android:contentDescription="Eliminar archivo" />

</LinearLayout>
